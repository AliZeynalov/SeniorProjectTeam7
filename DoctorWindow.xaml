<Window x:Class="Team7Senior.DoctorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Team7Senior"
        mc:Ignorable="d"
        Title="Doctor" Height="800" Width="1280" ResizeMode="CanMinimize">
    <Window.Background>
        <ImageBrush ImageSource="img/back.jpg"/>
    </Window.Background>
    <Window.Resources>
        <Style x:Key="ButtonStyle"
               TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="39"> </Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="VerticalAlignment" Value="Top"></Setter>
           
        </Style>
    </Window.Resources>
   
        
    
    <Grid>
        
        <Label x:Name="listlabel" Content="Patient List" Height="34" VerticalAlignment="Top" Margin="165,43,951.8,0" FontSize="20" FontFamily="Arial Black" Foreground="#FF126C8C"/>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="216" VerticalAlignment="Top" Width="409" Margin="48,91,0,0" Background="#FFA0BCD4" SelectionChanged="listView_SelectionChanged" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}"/>

                </GridView>
            </ListView.View>



        </ListView>

        <Canvas x:Name="addPatient" HorizontalAlignment="Left" Height="407" VerticalAlignment="Top" Width="409" Margin="47,340,0,0" Background="#FFA0BCD4">

            <Label 
                x:Name="addlabel" 
                Content="Add New Patient" 
                HorizontalAlignment="Left"
                VerticalAlignment="Top" 
                Canvas.Left="114" Width="179"
                Canvas.Top="5" 
                FontWeight="Bold"
                Foreground="#FF126C8C" 
                FontSize="20" 
                Height="50"/>
            <TextBox 
                x:Name="nametxt" 
                Height="27"
                TextWrapping="Wrap" 
                Width="176" 
                Canvas.Left="206"
                Canvas.Top="60" 
                GotFocus="name_GotFocus"/>
            <Button 
                x:Name="addbutton"
                Content="Add Patient" 
                Canvas.Left="146" 
                Canvas.Top="316"
                Click="addbutton_Click" 
                Style="{StaticResource ButtonStyle}"/>
            <TextBox 
                x:Name="mailtxt" 
                HorizontalAlignment="Left" 
                Height="25" 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                Width="176"
                Canvas.Left="206" 
                Canvas.Top="109" 
                GotFocus="mail_GotFocus"/>
            <Border  
                BorderThickness="3" 
                Height="407" 
                Width="409" 
                BorderBrush="#FF126C8C"/>
            <TextBox 
                x:Name="unametxt" 
                Height="22"
                TextWrapping="Wrap"
                Width="176" 
                Canvas.Left="206" 
                Canvas.Top="158"/>
            <Label 
                x:Name="label2"
                Content="Patient Name: " 
                Canvas.Left="42" 
                Canvas.Top="61" 
                Foreground="#FF126C8C" />
            <Label 
                x:Name="label3"
                Content="E-Mail: " 
                Canvas.Left="42" 
                Canvas.Top="109"  
                Foreground="#FF126C8C" />
            <Label 
                x:Name="label4" 
                Content="Username: "
                Canvas.Left="42"
                Canvas.Top="158" 
                Foreground="#FF126C8C" />
            <Label 
                x:Name="label5" 
                Content="Password: " 
                Canvas.Left="42" 
                Canvas.Top="202" 
                Foreground="#FF126C8C" />
            <Label 
                x:Name="label6" 
                Content="Confirm Password: " 
                Canvas.Left="42" 
                Canvas.Top="241" 
                Foreground="#FF126C8C" />
            <PasswordBox
                x:Name="passwdtxt" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Height="21" Width="176" 
                PasswordChar="*"
                MaxLength="8" 
                Canvas.Left="206"
                Canvas.Top="206"/>
            <PasswordBox 
                x:Name="cpasswdtxt" 
                HorizontalAlignment="Left"
                VerticalAlignment="Top" 
                Height="20" Width="176" 
                MaxLength="8"
                PasswordChar="*" 
                Canvas.Left="206" Canvas.Top="246" />
        </Canvas>
        <Canvas HorizontalAlignment="Left" Height="438" Margin="540,95,0,0" VerticalAlignment="Top" Width="614">
            <Label 
                x:Name="label1" 
                Content="View Patient Profile" 
                Canvas.Left="205" 
                Canvas.Top="-53"
                Height="39" 
                Width="269" 
                FontFamily="Arial Black" 
                FontSize="20" 
                Foreground="#FF126C8C"
                />
            <Button 
                x:Name="delbutton" 
                Content="Delete Patient" 
                Canvas.Left="452" 
                Canvas.Top="118" 
                Click="delbutton_Click" 
                Style="{StaticResource ButtonStyle}"/>
            <Button
            x:Name="definebtn" 
            Content="Define Motion" 
            Canvas.Left="450" 
            Canvas.Top="206" 
            Click="definebtn_Click"
            Style="{StaticResource ButtonStyle}"
           />
            <Button 
            Content="Choose Past Motion" 
            Canvas.Left="454" 
            Canvas.Top="292"
            Click="Button_Click_1"
            Style="{StaticResource ButtonStyle}"/>

            <Label 
                x:Name="label7" 
                Content="Name: " 
                Foreground="#FF126C8C" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Canvas.Left="64" 
                Width="91" 
                Height="30" 
                Canvas.Top="73"/>
            <Label 
                x:Name="label8" 
                Content="E-Mail: " 
                Foreground="#FF126C8C" 
                Canvas.Left="64" 
                Canvas.Top="118"/>
            <TextBox 
                x:Name="nametb" 
                HorizontalAlignment="Left" 
                Height="23" 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                Width="161" 
                Canvas.Left="165" 
                Canvas.Top="73" 
                IsEnabled="False"/>
            <TextBox 
                x:Name="mailtb" 
                HorizontalAlignment="Left" 
                Height="23" 
                TextWrapping="Wrap"  
                VerticalAlignment="Top" 
                Width="161" 
                Canvas.Left="165" 
                Canvas.Top="121" 
                IsEnabled="False"/>
            
            <TextBox 
                x:Name="subjecttb" 
                HorizontalAlignment="Left" 
                Height="23" 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                Width="257" 
                Canvas.Left="123" 
                Canvas.Top="180"/>
            <TextBox 
                x:Name="msgtb"
                HorizontalAlignment="Left" 
                Height="94" 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                Width="257" 
                Canvas.Left="123" 
                Canvas.Top="208" 
                AcceptsReturn="True" 
                VerticalScrollBarVisibility="Auto"/>
            
            <Button 
                x:Name="sendbtn" 
                Content="Send E-Mail" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Click="sendbtn_Click" 
                Canvas.Left="201" 
                Canvas.Top="377" 
                Style="{StaticResource ButtonStyle}"/>
            
            <PasswordBox
                x:Name="passtb"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                Width="138" Height="17" 
                PasswordChar="*" 
                Canvas.Left="242"
                Canvas.Top="316"/>
            <Label 
                x:Name="label" 
                Content="Send E-Mail to Patient" 
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="26" Width="151"
                Canvas.Left="175" 
                Canvas.Top="149" 
                FontWeight="Bold"
                Foreground="#FF126C8C"/>
            <Label 
                x:Name="label11" 
                Content="Password:"
                Foreground="#FF126C8C"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Canvas.Left="123" 
                Canvas.Top="307"/>
            <Label 
                x:Name="label12" 
                Content="*Please be sure that to use your gmail account password" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="316" 
                FontSize="10" 
                Canvas.Left="123" 
                Canvas.Top="337"
                Height="30"/>
            <Label 
                x:Name="label9" 
                Content="Subject:" 
                Foreground="#FF126C8C"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Canvas.Left="64" 
                Canvas.Top="176"/>
            <Label 
                x:Name="label13"
                Content="Message:" 
                Foreground="#FF126C8C" 
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Canvas.Left="64"
                Canvas.Top="208"/>
            <Border 
                BorderBrush="#FF126C8C"
                BorderThickness="3" 
                Height="445" 
                Width="620" 
                Canvas.Top="2"/>
        </Canvas>
       
            <Button 
             x:Name="outbtn" 
             Content="Logout"
             Margin="1131,22,0,0" 
            Click="outbtn_Click"
            Style="{StaticResource ButtonStyle}"/>
      
           

        <Image
            x:Name="image"
            Source="img/logo.png"
            HorizontalAlignment="Left"
            Height="131" 
            Margin="658,595,0,0"
            VerticalAlignment="Top"
            Width="409"/>
      


    </Grid>
   
</Window>
